<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_normal"
        android:paddingTop="@dimen/margin_normal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:onClick="close"
            android:paddingLeft="@dimen/margin_normal"
            android:paddingRight="@dimen/margin_half"
            android:scaleType="center"
            android:src="@drawable/ic_close"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/bind"
            android:textColor="@color/ttc_black"
            android:textSize="@dimen/text_size_big"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="94dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_relation"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_wallet"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="6dp"
                android:background="@drawable/round_rect"
                android:elevation="1dp"
                android:src="@drawable/ic_wallet"
                android:translationZ="6dp"/>

            <TextView
                android:id="@+id/tv_wallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_normal"
                android:text="@string/ttc_wallet"
                android:textColor="@color/ttc_black"
                android:textSize="@dimen/text_size_small"/>


        </LinearLayout>


        <ImageView
            android:id="@+id/iv_relation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/margin_double"
            android:layout_marginRight="@dimen/margin_double"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_relation"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_relation"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_icon_app"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="6dp"
                android:background="@drawable/round_rect"
                android:elevation="1dp"
                android:translationZ="6dp"
                tools:src="@drawable/ic_wallet"/>

            <TextView
                android:id="@+id/tv_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_normal"
                android:textColor="@color/ttc_black"
                android:textSize="@dimen/text_size_small"
                tools:text="tataUFO"/>

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/btn_bind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_marginTop="@dimen/margin_double"
        android:background="@drawable/corner_bg"
        android:gravity="center"
        android:onClick="bind"
        android:paddingBottom="@dimen/margin_half"
        android:paddingTop="@dimen/margin_half"
        android:text="@string/bind"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_small"/>

    <CheckBox
        android:id="@+id/cb_auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_normal"
        android:background="@null"
        android:button="@drawable/cb_selector"
        android:checked="true"
        android:paddingLeft="@dimen/margin_half"
        android:text="@string/auto_import"
        android:textColor="@color/ttc_black"
        android:textSize="@dimen/text_size_tiny"/>

</LinearLayout>