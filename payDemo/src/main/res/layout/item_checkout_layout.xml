<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/item_checkout_root"
        android:background="@color/white"
        android:layout_height="wrap_content">

    <RelativeLayout
            android:layout_width="match_parent"
            android:padding="@dimen/margin_normal"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/item_checkout_iv"
                android:layout_width="wrap_content"
                android:src="@mipmap/pay_paypal_unchecked"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/item_checkout_name"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/margin_normal"
                android:textSize="@dimen/text_size_big"
                android:visibility="visible"
                android:layout_marginRight="@dimen/margin_normal"
                android:layout_toRightOf="@+id/item_checkout_iv"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TTC"/>

        <!--<ImageView-->
                <!--android:layout_width="match_parent"-->
                <!--android:background="@color/blue"-->
                <!--android:src="@mipmap/pay_paypal_checked"-->
                <!--android:id="@+id/item_checkout_checked_iv"-->
                <!--android:visibility="visible"-->
                <!--android:layout_height="wrap_content"/>-->
    </RelativeLayout>

    <include layout="@layout/divide_line_layout"/>
</LinearLayout>
